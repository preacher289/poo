#include <stdio.h>
struct Edge{int u,v,w;};
void BellmanFord(struct Edge edges[],int V,int E,int src){
int dist[V]; for(int i=0;i<V;i++) dist[i]=999;
dist[src]=0;
for(int i=1;i<V;i++)
for(int j=0;j<E;j++){
int u=edges[j].u,v=edges[j].v,w=edges[j].w;
if(dist[u]!=999 && dist[u]+w<dist[v]) dist[v]=dist[u]+w;
}
for(int i=0;i<V;i++) printf("%d ",dist[i]);
}
int main(){
int V=5,E=8;
struct Edge edges[]={{0,1,-1},{0,2,4},{1,2,3},{1,3,2},{1,4,2},{3,2,5},{3,1,1},{4,3,-3}};
BellmanFord(edges,V,E,0);
return 0;
}
Sample Input:
Graph edges list
Sample Output:0 -1 2 -2 1

